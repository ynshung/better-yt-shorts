{
    "name": "Better YouTube Shorts",
    "description": "Playback and volume controls (with J, L, M, - and +) and timestamp on YouTube Shorts.",
    "version": "1.4.2",
    "manifest_version": 3,
    "content_scripts": [
        {
            "matches": ["https://*.youtube.com/*"],
            "js": ["content-script.js"],
            "css": ["styles.css"]
        }
    ],
    "icons": {
        "16": "icons/byts16.png",
        "32": "icons/byts32.png",
        "48": "icons/byts48.png",
        "128": "icons/byts128.png"
    }
}